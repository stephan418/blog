<UserControl x:Class="WindowsClient.PostCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsClient" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <materialDesign:Card Padding="16 8" Margin="16">
            <StackPanel>
                <TextBlock Style="{DynamicResource MaterialDesignHeadline6TextBlock}" VerticalAlignment="Top" x:Name="Title"></TextBlock>
                <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock}" VerticalAlignment="Top" Margin="0 5 0 0" x:Name="Text"></TextBlock>
                <Button HorizontalAlignment="Center" Click="Button_Click">Read full story</Button>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
